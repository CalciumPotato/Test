<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/tv_title_billBD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom break-down" />

        <Button
            android:id="@+id/btn_customBD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom break-down" />

        <EditText
            android:id="@+id/input_amount_BD_2a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter bill amount"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/tv_person_pcnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Percentage each person:" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="134dp">

            <LinearLayout
                android:id="@+id/scrollView_pcnt_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/input_pcnt0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Enter percentage 1"
                    android:inputType="numberDecimal" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/output_amount_custBD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount (each person): " />

        <Button
            android:id="@+id/btn_add_custBD_pcnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ff00"
            android:text="Add person"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_calc_custBD_pcnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000ff"
            android:text="Calculate (Percentage)"
            android:textColor="#ffffff" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>